<Window x:Class="PL.Volunteer.CallHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Volunteer"
        mc:Ignorable="d"
        Title="CallHistoryWindow" Height="640" Width="800">
    <Grid>
        <Grid VerticalAlignment="Top" Margin="100,20,106,0" Height="548">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- כותרת של המסך -->
            <Label Content="Call History" Grid.Column="1" FontSize="30" FontWeight="Bold" Foreground="DarkBlue"
               HorizontalAlignment="Left" Margin="58,10,0,20" Width="248"/>

            <!-- Labels ו-TextBoxים -->

            <Label Content="Call ID" Grid.Row="1" Grid.Column="0" Foreground="Blue" FontSize="13" FontWeight="Bold" VerticalAlignment="Center" Height="27"/>
            <TextBox Text="{Binding }" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Height="18" IsReadOnly="True" Margin="10"/>

            <Label Content="Call Type" Grid.Row="2" Grid.Column="0" Foreground="Blue" FontSize="13" FontWeight="Bold" VerticalAlignment="Center" Height="27"/>
            <TextBox Text="{Binding }" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Height="18" IsReadOnly="True" Margin="10"/>

            <Label Content="Call Open Time" Grid.Row="3" Grid.Column="0" Foreground="Blue" FontSize="13" FontWeight="Bold" VerticalAlignment="Center" Height="27"/>
            <TextBox Text="{Binding }" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Height="18" IsReadOnly="True" Margin="10"/>

            <Label Content="Time Left to Close" Grid.Row="4" Grid.Column="0" Foreground="Blue" FontSize="13" FontWeight="Bold" VerticalAlignment="Center" Height="27"/>
            <TextBox Text="{Binding }" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" Height="18" IsReadOnly="True" Margin="10"/>

            <Label Content="Last Volunteer Name" Grid.Row="5" Grid.Column="0" Foreground="Blue" FontSize="13" FontWeight="Bold" VerticalAlignment="Center" Height="27"/>
            <TextBox Text="{Binding }" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" Height="18" IsReadOnly="True" Margin="10"/>

            <Label Content="Total Treatment Time" Grid.Row="6" Grid.Column="0" Foreground="Blue" FontSize="13" FontWeight="Bold" VerticalAlignment="Center" Height="27"/>
            <TextBox Text="{Binding }" Grid.Row="6" Grid.Column="1" VerticalAlignment="Center" Height="18" IsReadOnly="True" Margin="10"/>

            <Label Content="Call Status" Grid.Row="7" Grid.Column="0" Foreground="Blue" FontSize="13" FontWeight="Bold" VerticalAlignment="Center" Height="27"/>
            <TextBox Text="{Binding }" Grid.Row="7" Grid.Column="1" VerticalAlignment="Center" Height="18" IsReadOnly="True" Margin="10"/>

            <Label Content="Sum of Assignments" Grid.Row="8" Grid.Column="0" Foreground="Blue" FontSize="13" FontWeight="Bold" VerticalAlignment="Center" Height="27"/>
            <TextBox Text="{Binding }" Grid.Row="8" Grid.Column="1" VerticalAlignment="Center" Height="18" IsReadOnly="True" Margin="10"/>

            <!-- ComboBox לסינון -->
            <ComboBox Grid.Row="9" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10" Width="200" SelectionChanged="ComboBox_SelectionChanged">
                <ComboBoxItem Content="All Calls"/>
                <ComboBoxItem Content="Treated Calls"/>
                <ComboBoxItem Content="Cancelled by Volunteer"/>
                <ComboBoxItem Content="Cancelled by Manager"/>
                <ComboBoxItem Content="Expired"/>
            </ComboBox>
            <Grid/>
        </Grid>
    </Grid>
</Window>
