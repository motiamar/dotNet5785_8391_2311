<Window x:Class="PL.Volunteer.ChooseCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Volunteer"
        mc:Ignorable="d"
        Title="ChooseCallWindow" Height="600" Width="940"
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <!-- Grid Root Container -->
    <Grid>
        <!-- Row Definitions: Define the structure of the grid with 4 rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header Row (Title) -->
            <RowDefinition Height="500*"/>
            <!-- ListView for call history -->
            <RowDefinition Height="Auto"/>
            <!-- Row for Label and TextBox -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header "Call History" -->
        <Label Content="Choose call" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" FontWeight="Bold" Margin="0,20"/>

        <!-- ComboBox for sorting/filtering calls -->
        <Grid Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" Width="auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!-- ComboBox for sorting the call list -->
            <ComboBox Grid.Column="1" Margin="10" VerticalAlignment="Center" SelectionChanged="ComboBox_SelectionChanged_1" 
                   SelectedValue="{Binding OpenCallInListSort , Mode=TwoWay}" 
                   ItemsSource="{Binding Source={StaticResource OpenCallInListCollectionKey}}" />

            <!-- ComboBox for filtering by call type -->
            <ComboBox Grid.Column="0" Margin="10" VerticalAlignment="Center" SelectionChanged="ComboBox_SelectionChanged_1" 
                   SelectedValue="{Binding CallTypeFilter , Mode=TwoWay}" 
                   ItemsSource="{Binding Source={StaticResource CallTypeListCollectionKey}}" />
        </Grid>

        <!-- ListView displaying call history -->
        <ListView Grid.Row="1" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ItemsSource="{Binding OpenCallInList}" SelectedItem="{Binding SelectOpenCallInList, Mode=TwoWay}">
            <ListView.View>
                <GridView>
                    <!-- Column "Call ID" -->
                    <GridViewColumn Header="Call ID" Width="70">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Id}"  HorizontalAlignment="Center" Background="Yellow"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Column "Call Type" -->
                    <GridViewColumn Header="Call type" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Type}" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Column "Call Address" -->
                    <GridViewColumn Header="Call address" Width="200">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding CallAddress}" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Column "Call Open Time" -->
                    <GridViewColumn Header="Call open time" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding CallOpenTime}" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Column "Call Enter Time" -->
                    <GridViewColumn Header="Call max close time" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding CallMaxCloseTime}" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Column "Call Close Time" -->
                    <GridViewColumn Header="Call distance" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding CallDistance}" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Action" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Choose" HorizontalAlignment="Center" VerticalAlignment="Center" Click="BtnChoose_Click" Background="LightSteelBlue"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Label and TextBox below ListView -->
        <Grid Grid.Row="3" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Label for description -->
            <Label Grid.Column="0" Content="Description:" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>

            <!-- TextBox for input -->
            <TextBox   Text="{Binding SelectOpenCallInList.Description, Mode=OneWay}" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch" IsReadOnly="True"/>
        </Grid>
        <Label Content="Update address" HorizontalAlignment="Left" Margin="36,10,0,0" VerticalAlignment="Top"/>
        <TextBox Text="{Binding volunteer.Address, Mode=TwoWay}" HorizontalAlignment="Left" Margin="36,41,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="249"/>
        <Button Content="Change" HorizontalAlignment="Left" Margin="299,38,0,0" VerticalAlignment="Top" Height="27" Width="67" Background="LightSteelBlue" Click="BtnUpdateAddress_Click"/>

    </Grid>
</Window>
