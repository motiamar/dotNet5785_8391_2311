<Window x:Class="PL.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:PL" mc:Ignorable="d" 
        Title="MainWindow" Height="640" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Grid>
        <!-- Set background image of the window -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Images/Image.jpg" />
        </Grid.Background>

        <!-- Title label with blurred effect on black text -->
        <Label Content="Login to the System" FontSize="24" Foreground="Black" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0">
            <Label.Effect>
                <BlurEffect Radius="10" />
                <!-- Apply blur effect -->
            </Label.Effect>
        </Label>

        <!-- Title label with white text (on top of the black one) -->
        <Label Content="Login to the System" FontSize="24" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" />

        <!-- Main StackPanel for holding the login controls -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

            <!-- User ID input section -->
            <Grid>
                <Label Content="Enter User ID:" FontSize="16" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Label.Effect>
                        <BlurEffect Radius="10" />
                        <!-- Apply blur effect -->
                    </Label.Effect>
                </Label>
                <!-- Label with white text (on top of the black one) -->
                <Label Content="Enter User ID:" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Grid>
            <!-- TextBox for entering User ID -->
            <TextBox Text="{Binding CurrentID}" Width="250" Margin="0,0,0,20" />

            <!-- Password input section -->
            <Grid>
                <Label Content="Enter Password:" FontSize="16" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Label.Effect>
                        <BlurEffect Radius="10" />
                        <!-- Apply blur effect -->
                    </Label.Effect>
                </Label>
                <!-- Label with white text (on top of the black one) -->
                <Label Content="Enter Password:" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Grid>

            <!-- Password input (PasswordBox) and alternative text box for password -->
            <Grid>
                <!-- PasswordBox for entering password securely -->
                <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged" Width="250" Margin="0,0,0,20" Visibility="Visible" />
                <!-- Invisible TextBox that can be used to show password in plain text -->
                <TextBox x:Name="TextBoxPassword" Visibility="Collapsed" Width="250" Margin="0,0,0,20" IsReadOnly="True" />
            </Grid>

            <!-- Show/Hide password checkbox -->
            <CheckBox x:Name="ShowPasswordCheckBox" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,10,0,0" Checked="ShowPasswordCheckBox_Checked" Unchecked="ShowPasswordCheckBox_Unchecked">
                <Grid>
                    <!-- TextBlock for "Show Password" with blur effect on black text -->
                    <TextBlock Text="Show Password" FontFamily="Arial" FontSize="14" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock.Effect>
                            <BlurEffect Radius="10" />
                            <!-- Apply blur effect -->
                        </TextBlock.Effect>
                    </TextBlock>
                    <!-- TextBlock for "Show Password" with white text (on top of the black one) -->
                    <TextBlock Text="Show Password" FontFamily="Arial" FontSize="14" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Grid>
            </CheckBox>

            <!-- Login button to trigger the login action -->
            <Button Content="Login" Width="150" Background="LightBlue" Height="40" HorizontalAlignment="Center" Click="BtnLogIn_Click" />
        </StackPanel>

        <!-- Label for showing "בס''ד" in the top-right corner -->
        <Label Content="בס''ד" FontWeight="Bold" Foreground="White" HorizontalAlignment="Left" Margin="751,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-47.467,24.869" />
    </Grid>
</Window>
