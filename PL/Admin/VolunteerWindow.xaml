<Window x:Class="PL.Admin.VolunteerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VolunteerWindow" Height="640" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Images/Image5.jpg"/>
        </Grid.Background>
        <!-- מרכז טבלה עם 2 עמודות -->
        <Grid VerticalAlignment="Top" Margin="100,20,106,0" Height="548">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <Label Content="Volunteer details" Grid.Column="0" Grid.ColumnSpan="2" 
                   FontSize="30" FontWeight="Bold" Foreground="White" 
                   HorizontalAlignment="Left" Margin="173,10,0,20" Width="248"/>

            <!-- Labels and Inputs -->
            <!-- Volunteer Activity -->
            <Label Content="Volunteer Activity:" Grid.Row="1" Grid.Column="0" Foreground="Black" FontSize="14" FontWeight="Bold" Margin="0,0,0,28" Grid.RowSpan="2">
                <Label.Effect>
                    <BlurEffect Radius="20"/>
                </Label.Effect>
            </Label>
            <Label Content="Volunteer Activity:" Grid.Row="1" Grid.Column="0" Foreground="White" FontSize="13" FontWeight="Bold" VerticalAlignment="Center" Height="27"/>
            
            <CheckBox IsChecked="{Binding CorrentVolunteer.Active}" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Height="15">
                <!-- Active checkbox with blurred background effect -->
                <CheckBox.Content>
                    <Grid>
                        <TextBlock Text="Active" FontFamily="Arial" FontSize="14" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock.Effect>
                                <BlurEffect Radius="10" />
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock Text="Active" FontFamily="Arial" FontSize="14" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Grid>
                </CheckBox.Content>
            </CheckBox>
            <!-- Volunteer Id -->
            <Label Content="Volunteer Id:" Grid.Row="2" Grid.Column="0" Foreground="Black" FontSize="14" FontWeight="Bold" Margin="0,27,0,27" Grid.RowSpan="3">
                <Label.Effect>
                    <BlurEffect Radius="20"/>
                </Label.Effect>
            </Label>
            <Label Content="Volunteer Id:" Grid.Row="2" Grid.Column="0" Foreground="White" FontSize="13" FontWeight="Bold" VerticalAlignment="Center" Height="27"/>
            <TextBox Text="{Binding CorrentVolunteer.Id}" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Height="18"/>

            <!-- Volunteer Name -->
            <Label Content="Volunteer Name:" Grid.Row="3" Grid.Column="0" Foreground="White" FontSize="13" FontWeight="Bold" VerticalAlignment="Center" Height="27"/>
            <Label Content="Volunteer Name:" Grid.Row="3" Grid.Column="0" Foreground="Black" FontSize="14" FontWeight="Bold" Margin="0,28,0,28" Grid.RowSpan="3">
                <Label.Effect>
                    <BlurEffect Radius="20"/>
                </Label.Effect>
            </Label>
            <TextBox Text="{Binding CorrentVolunteer.FullName}" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Height="18"/>

            <!-- Volunteer Phone -->
            <Label Content="Volunteer Phone:" Grid.Row="4" Grid.Column="0" Foreground="Black" FontSize="14" FontWeight="Bold">
                <Label.Effect>
                    <BlurEffect Radius="20"/>
                </Label.Effect>
            </Label>
            <Label Content="Volunteer Phone:" Grid.Row="4" Grid.Column="0" Foreground="White" FontSize="13" FontWeight="Bold" VerticalAlignment="Center" Height="28"/>
            <TextBox Text="{Binding CorrentVolunteer.Phone}" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" Height="18"/>

            <!-- Volunteer Email -->
            <Label Content="Volunteer Email:" Grid.Row="5" Grid.Column="0" Foreground="Black" FontSize="14" FontWeight="Bold" Margin="0,28,0,0" Grid.RowSpan="2">
                <Label.Effect>
                    <BlurEffect Radius="20"/>
                </Label.Effect>
            </Label>
            <Label Content="Volunteer Email:" Grid.Row="5" Grid.Column="0" Foreground="White" FontSize="13" FontWeight="Bold" VerticalAlignment="Center" Height="27"/>
            <TextBox Text="{Binding CorrentVolunteer.Email}" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" Height="18"/>

            <!-- Volunteer Password -->
            <Label Content="Volunteer Password:" Grid.Row="6" Grid.Column="0" Foreground="Black" FontSize="14" FontWeight="Bold" Margin="0,1,0,28" Grid.RowSpan="2">
                <Label.Effect>
                    <BlurEffect Radius="20"/>
                </Label.Effect>
            </Label>
            <Label Content="Volunteer Password:" Grid.Row="6" Grid.Column="0" Foreground="White" FontSize="13" FontWeight="Bold" VerticalAlignment="Center" Height="27"/>
            <TextBox Text="{Binding CorrentVolunteer.Password}" Grid.Row="6" Grid.Column="1" VerticalAlignment="Center" Height="18"/>

            <!-- Volunteer Address -->
            <Label Content="Volunteer Address:" Grid.Row="7" Grid.Column="0" Foreground="White" FontSize="13" FontWeight="Bold" VerticalAlignment="Center" Height="28"/>
            <Label Content="Volunteer Address:" Grid.Row="7" Grid.Column="0" Foreground="Black" FontSize="14" FontWeight="Bold" Margin="0,28,0,0" Grid.RowSpan="2">
                <Label.Effect>
                    <BlurEffect Radius="20"/>
                </Label.Effect>
            </Label>
            <TextBox Text="{Binding CorrentVolunteer.Address}" Grid.Row="7" Grid.Column="1" VerticalAlignment="Center" Height="18"/>

            <!-- Volunteer Role -->
            <Label Content="Volunteer Role:" Grid.Row="8" Grid.Column="0" Foreground="White" FontSize="13" FontWeight="Bold" VerticalAlignment="Center" Height="27"/>
            <Label Content="Volunteer Role:" Grid.Row="8" Grid.Column="0" Foreground="Black" FontSize="14" FontWeight="Bold" Margin="0,28,0,28" Grid.RowSpan="3">
                <Label.Effect>
                    <BlurEffect Radius="20"/>
                </Label.Effect>
            </Label>
            <ComboBox ItemsSource="{Binding Source={StaticResource RoleColelctionKey}}" SelectedValue="{Binding CorrentVolunteer.role}" Grid.Row="8" Grid.Column="1" VerticalAlignment="Center" Height="22"/>

            <!-- Maximum Distance -->
            <Label Content="Maximum Distance:" Grid.Row="9" Grid.Column="0" Foreground="White" FontSize="13" FontWeight="Bold" VerticalAlignment="Center" Height="27"/>
            <Label Content="Maximum Distance:" Grid.Row="9" Grid.Column="0" Foreground="Black" FontSize="14" FontWeight="Bold" Margin="0,27,0,28" Grid.RowSpan="3">
                <Label.Effect>
                    <BlurEffect Radius="20"/>
                </Label.Effect>
            </Label>
            <TextBox Text="{Binding CorrentVolunteer.MaximumDistance}" Grid.Row="9" Grid.Column="1" VerticalAlignment="Center" Height="18"/>

            <!-- Distance Type -->
            <Label Content="Distance Type:" Grid.Row="10" Grid.Column="0" Foreground="White" FontSize="13" FontWeight="Bold" VerticalAlignment="Center" Height="27"/>
            <Label Content="Distance Type:" Grid.Row="10" Grid.Column="0" Foreground="White" FontSize="13" FontWeight="Bold" VerticalAlignment="Center" Height="27">
                <Label.Effect>
                    <BlurEffect Radius="20"/>
                </Label.Effect>
            </Label>
            <ComboBox ItemsSource="{Binding Source={StaticResource DistanceTypeColelctionKey}}" SelectedValue="{Binding CorrentVolunteer.DistanceType}" Grid.Row="10" Grid.Column="1" VerticalAlignment="Center" Height="22"/>

            <!-- Treated Calls -->
            <Label Content="Treated Calls:" Grid.Row="11" Grid.Column="0" Foreground="Black" FontSize="14" FontWeight="Bold" Margin="0,1,0,28" Grid.RowSpan="2">
                <Label.Effect>
                    <BlurEffect Radius="20"/>
                </Label.Effect>
            </Label>
            <Label Content="Treated Calls:" Grid.Row="11" Grid.Column="0" Foreground="White" FontSize="13" FontWeight="Bold" VerticalAlignment="Center" Height="27"/>
            <TextBox Text="{Binding CorrentVolunteer.TreatedCalls}" Grid.Row="11" Grid.Column="1" VerticalAlignment="Center" IsReadOnly="True" Height="18"/>

            <!-- Canceled Calls -->
            <Label Content="Canceled Calls:" Grid.Row="12" Grid.Column="0" Foreground="Black" FontSize="14" FontWeight="Bold">
                <Label.Effect>
                    <BlurEffect Radius="20"/>
                </Label.Effect>
            </Label>
            <Label Content="Canceled Calls:" Grid.Row="12" Grid.Column="0" Foreground="White" FontSize="13" FontWeight="Bold" VerticalAlignment="Center" Height="28"/>
            
            <TextBox Text="{Binding CorrentVolunteer.CanceledCalls}" Grid.Row="12" Grid.Column="1" VerticalAlignment="Center" IsReadOnly="True" Height="18"/>

            <!-- Expired Calls -->
            <Label Content="Expired Calls:" Grid.Row="13" Grid.Column="0" Foreground="White" FontSize="13" FontWeight="Bold" VerticalAlignment="Center" Height="27"/>
            <Label Content="Expired Calls:" Grid.Row="13" Grid.Column="0" Foreground="Black" FontSize="14" FontWeight="Bold" Margin="0,28,0,0" Grid.RowSpan="2">
                <Label.Effect>
                    <BlurEffect Radius="20"/>
                </Label.Effect>
            </Label>
            <TextBox Text="{Binding CorrentVolunteer.ExpiredCalls}" Grid.Row="13" Grid.Column="1" VerticalAlignment="Center" IsReadOnly="True" Height="18"/>

            <!-- Current Call -->
            <Label Content="Current Call:" Grid.Row="14" Grid.Column="0" Foreground="Black" FontSize="14" FontWeight="Bold" Margin="0,27,0,0" Grid.RowSpan="2">
                <Label.Effect>
                    <BlurEffect Radius="20"/>
                </Label.Effect>
            </Label>
            <Label Content="Current Call:" Grid.Row="14" Grid.Column="0" Foreground="White" FontSize="13" FontWeight="Bold" VerticalAlignment="Center" Height="27"/>
            <TextBox Text="{Binding CorrentVolunteer.CorrentCall, Converter={StaticResource CallInProgressConverterKey}}" Grid.Row="14" Grid.Column="1" VerticalAlignment="Center" Height="92" IsReadOnly="True"/>

            <!-- Button -->
            <Button Grid.Row="14" Grid.Column="1" Content="{Binding ButtonText}" HorizontalAlignment="Center" Background="LightBlue" Width="162" Margin="0,92,0,-44" Grid.RowSpan="3" Click="BtnAddUpdate_Click"/>
        </Grid>
    </Grid>
</Window>
